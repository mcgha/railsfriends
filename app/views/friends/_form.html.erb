<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group pb-2">
    <%= form.text_field :first_name,
        class:'form-control',
        placeholder:'First name' %>
  </div>

  <div class="field form-group pb-2">
    <%= form.text_field :last_name,
        class:'form-control',
        placeholder:'Last name' %>
  </div>

  <div class="field form-group pb-2">
    <%= form.text_field :email,
        class:'form-control',
        placeholder:'Email' %>
  </div>

  <div class="field form-group pb-2">
    <%= form.text_field :phone,
        class:'form-control',
        placeholder:'Phone number' %>
  </div>

  <div class="field form-group pb-2">
    <%= form.text_field :twitter,
        class:'form-control',
        placeholder:'Twitter' %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id,
        id: :friends_user_id,
        class:'form-control',
        value: current_user.id,
        type: :hidden %>
        <!-- provided by devise gem to check current user -->
  </div>
<br />
  <div class="actions">
    <%= form.submit class:'btn btn-dark' %>
  </div>
<% end %>
